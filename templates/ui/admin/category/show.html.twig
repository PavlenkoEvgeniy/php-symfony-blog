{% extends 'ui/admin/layout/layout.html.twig' %}

{% block title %}Просмотр категории{% endblock %}

{% block body %}
    <h1>Просмотр категории</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ИД</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Дата создания</th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Дата обновления</th>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Дата удаления</th>
                <td>{{ category.deletedAt ? category.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('ui_admin_category_edit', {'id': category.id}) }}">Редактировать</a>
    <a class="btn btn-secondary" href="{{ path('ui_admin_category_index') }}">Вернуться к списку категорий</a>
{% endblock %}
