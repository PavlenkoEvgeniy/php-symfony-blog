{% extends 'ui/admin/layout/layout.html.twig' %}

{% block title %}Просмотр поста{% endblock %}

{% block body %}
    <h1>Просмотр поста</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ИД</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Содержание</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Опубликован</th>
                <td>{{ post.isPublished ? 'Да' : 'Нет' }}</td>
            </tr>
            <tr>
                <th>Дата создания</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Дата обновления</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Дата удаления</th>
                <td>{{ post.deletedAt ? post.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('ui_admin_post_edit', {'id': post.id}) }}">Редактировать</a>
    <a class="btn btn-secondary" href="{{ path('ui_admin_post_index') }}">Вернуться к списку постов</a>
{% endblock %}
