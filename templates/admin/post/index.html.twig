{% extends 'admin/layout/layout.html.twig' %}

{% block title %}Список постов{% endblock %}

{% block body %}
    <h1>Список постов</h1>

    <a class="btn btn-success" href="{{ path('app_admin_post_new') }}">+ Создать новый пост</a>

    <table class="table">
        <thead>
            <tr>
                <th>No</th>
                <th>ИД</th>
                <th>Название</th>
                <th>Содержание</th>
                <th>Опубликован</th>
                <th>Дата создания</th>
                <th>Дата обновления</th>
                <th>Дата удаления</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.isPublished ? 'Да' : 'Нет' }}</td>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.deletedAt ? post.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_admin_post_show', {'id': post.id}) }}">Показать</a>
                    <a href="{{ path('app_admin_post_edit', {'id': post.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td class="text-center" colspan="9">Постов нет...</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_admin_post_new') }}">+ Создать новый пост</a>
{% endblock %}
